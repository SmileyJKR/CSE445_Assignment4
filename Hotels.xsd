<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
	<xs:element name = "Hotels">
		<xs:complexType>
			<xs:sequence>
					<!-- Remember about Multiple Hotel types being allowed -->
				<xs:element name = "Hotel" minOccurs = "0" maxOccurs = "Unbounded">
					<xs:complexType>
						<xs:sequence>
							<xs:element name = "Name" type = "xs:string"/>
							<xs:element name = "Phone" type = "xs:string" minOccurs = "0" maxOccurs = "unbounded"/>
							<xs:element name = "Address">
								<xs:complexType>
									<xs:sequence>
										<xs:element name = "Number" type = "xs:string"/>
										<xs:element name = "Street" type = "xs:string"/>
										<xs:element name = "City" type = "xs:string"/>
										<xs:element name = "State" type = "xs:string"/>
										<xs:element name = "Zip" type = "xs:string"/>
									</xs:sequence>
									<!-- The required attribute -->
									<xs:attribute name = "NearestAirport" type = "xs:string"  use="required"/>
								</xs:complexType>
							</xs:element>
						</xs:sequence>
						<!-- The optional attribute -->
						<xs:attribute name = "Rating" type="xs:decimal" use="optional"/>
					</xs:complexType>
				</xs:element>
			</xs:sequence>
		</xs:complexType>
	</xs:element>
	
</xs:schema>